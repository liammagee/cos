<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0"
  metadata-complete="true">

    <display-name>Circles of Sustainability</display-name>
  <description>
    An application for managing sustainability projects, issues and indicators.
  </description>

    <servlet>
      <servlet-name>loginServlet</servlet-name>
      <servlet-class>edu.rmit.sustainability.server.LoginControllerServlet</servlet-class>
    </servlet>
    <servlet>
      <servlet-name>notificationServlet</servlet-name>
      <servlet-class>edu.rmit.sustainability.server.NotificationControllerServlet</servlet-class>
    </servlet>
    <servlet>
      <servlet-name>suggestionServlet</servlet-name>
      <servlet-class>edu.rmit.sustainability.server.SuggestionControllerServlet</servlet-class>
    </servlet>
    <servlet>
      <servlet-name>projectStatusServlet</servlet-name>
      <servlet-class>edu.rmit.sustainability.server.ProjectStatusControllerServlet</servlet-class>
    </servlet>
    <servlet>
      <servlet-name>reportControllerServlet</servlet-name>
      <servlet-class>edu.rmit.sustainability.server.ReportControllerServlet</servlet-class>
    </servlet>
    <servlet>
      <servlet-name>projectControllerServlet</servlet-name>
      <servlet-class>edu.rmit.sustainability.server.ProjectControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>issueControllerServlet</servlet-name>
        <servlet-class>edu.rmit.sustainability.server.IssueControllerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>indicatorControllerServlet</servlet-name>
        <servlet-class>edu.rmit.sustainability.server.IndicatorControllerServlet</servlet-class>
    </servlet>
    <servlet>
      <servlet-name>assessmentControllerServlet</servlet-name>
      <servlet-class>edu.rmit.sustainability.server.AssessmentControllerServlet</servlet-class>
    </servlet>
    <servlet>
      <servlet-name>rankIssuesControllerServlet</servlet-name>
      <servlet-class>edu.rmit.sustainability.server.RankIssueControllerServlet</servlet-class>
    </servlet>
    <servlet>
      <servlet-name>relateIssuesControllerServlet</servlet-name>
      <servlet-class>edu.rmit.sustainability.server.RelateIssueControllerServlet</servlet-class>
    </servlet>
    <servlet>
      <servlet-name>questionnaireControllerServlet</servlet-name>
      <servlet-class>edu.rmit.sustainability.server.QuestionnaireControllerServlet</servlet-class>
    </servlet>
    <servlet>
      <servlet-name>userControllerServlet</servlet-name>
      <servlet-class>edu.rmit.sustainability.server.UserControllerServlet</servlet-class>
    </servlet>
    <servlet>
      <servlet-name>welcomeServlet</servlet-name>
      <servlet-class>edu.rmit.sustainability.server.WelcomeControllerServlet</servlet-class>
    </servlet>
    <servlet>
      <servlet-name>helpServlet</servlet-name>
      <servlet-class>edu.rmit.sustainability.server.HelpControllerServlet</servlet-class>
    </servlet>

    <servlet-mapping>
      <servlet-name>loginServlet</servlet-name>
      <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>assessmentControllerServlet</servlet-name>
      <url-pattern>/assessment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>suggestionServlet</servlet-name>
      <url-pattern>/suggestions</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>notificationServlet</servlet-name>
      <url-pattern>/notifications</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>projectStatusServlet</servlet-name>
      <url-pattern>/projectStatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>projectControllerServlet</servlet-name>
      <url-pattern>/workingProject</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>issueControllerServlet</servlet-name>
      <url-pattern>/criticalIssue</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>rankIssuesControllerServlet</servlet-name>
      <url-pattern>/rankIssues</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>relateIssuesControllerServlet</servlet-name>
      <url-pattern>/relateIssues</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>indicatorControllerServlet</servlet-name>
      <url-pattern>/indicator</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>reportControllerServlet</servlet-name>
      <url-pattern>/report</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>questionnaireControllerServlet</servlet-name>
      <url-pattern>/questionnaire</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>userControllerServlet</servlet-name>
      <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>welcomeServlet</servlet-name>
      <url-pattern>/welcome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
      <servlet-name>helpServlet</servlet-name>
      <url-pattern>/help</url-pattern>
    </servlet-mapping>

